<!DOCTYPE html>
<html>
  <head>
    <title>gamecritic</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!--[if lt IE 9]>
      <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/r29/html5.min.js">
      </script>
    <![endif]-->
    <script src="https://kit.fontawesome.com/fbc4707179.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <header>
      <nav class="navbar-dark bg-dark">
        <%= link_to "gamecritic", '#', id: "logo" ,class: "navbar-brand"%>
        <ul class="list-inline">
          <li class="list-inline-item"><%= link_to "About", '#', class: "text-light" %></li>
          <li class="list-inline-item"><%= link_to "Users", '#', class: "text-light" %></li>
          <% if logged_in? %>
            <li class="dropdown list-inline-item">
              <a class="dropdown-toggle text-light" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Menu
              </a>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                <%= link_to "Profile", current_user, class: "dropdown-item" %>
                <%= link_to "Logout", logout_path, method: :delete, class: "dropdown-item" %>
              </div>
            </li>
          <% else %>
            <li class="list-inline-item"><%= link_to "Login", login_path, class: "text-light" %></li>
            <li class="list-inline-item"><%= link_to "Signup", signup_path, class: "text-light" %></li>
          <% end %>
        </ul>
      </nav>
    </header>
    <div class="wrapper">
      <% flash.each do |message_type, message| %>
        <%= content_tag(:div, message, class: "alert alert-#{message_type}") %>
      <% end %>
      <%= yield %>
      <%= debug(params) if Rails.env.development? %>
    </div>
  </body>
</html>
