<!DOCTYPE html>
<html>
  <head>
    <title>gamecritic</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!--[if lt IE 9]>
      <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/r29/html5.min.js">
      </script>
    <![endif]-->
  </head>

  <body>
    <header>
      <nav class="navbar-dark bg-dark">
        <%= link_to "gamecritic", '#', id: "logo" ,class: "navbar-brand"%>
        <ul class="list-inline">
          <li class="list-inline-item"><%= link_to "About", '#',class: "text-light" %></li>
          <li class="list-inline-item"><%= link_to "Users", '#',class: "text-light" %></li>
          <li class="list-inline-item"><%= link_to "Login", '#',class: "text-light" %></li>
        </ul>
      </nav>
    </header>
    <div class="wrapper">
      <%= yield %>
      <%= debug(params) if Rails.env.development? %>
    </div>
  </body>
</html>
