<%= form_for @recruitment, url: { action: yield(:action) } do |f| %>
  <%= render 'shared/error_messages', object: @recruitment %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_area :title, class: "form-control", id: "title" %>
  </div>
  <div class="form-group">
    <div><%= f.label :description %></div>
    <%= f.text_area :description, class: "form-control", id: "review" %>
  </div>
  <%= hidden_field_tag(:game_id, @recruitment.game_id) %>
  <%= f.submit yield(:button_text), class: "btn btn-success" %>
<% end %>
