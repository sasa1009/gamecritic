<div class="registration-form">
  <h1>gamecriticにログイン</h1>
  <div class="form">
    <%= form_for(:session, url: login_path) do |f| %>
      <div class="form-group" >
        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email, class: "form-control", id: "email" %>
      </div>
      <div class="form-group">
        <%= f.label :password, "パスワード" %>
        <%= f.password_field :password, class: "form-control", id: "password" %>
      </div>
      <div class="form-group">
        <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box(:remember_me, { checked: false }, true, false) %>
        <span>ログインしたままにする</span>
      <% end %>
      </div>
      <%= f.submit "ログイン", class: "btn btn-success" %>
      <div class="password-reset">
        <%= link_to "パスワードを忘れた場合", new_password_reset_path %>
      </div>
    <% end %>
  </div>
</div>
