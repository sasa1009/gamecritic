<%= form_for(@user, url: yield(:url)) do |f| %>
  <%= render 'shared/error_messages', object: @user %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control", id: "name" %>
  </div>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class: "form-control", id: "email" %>
  </div>
  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, class: "form-control", id: "password" %>
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, class: "form-control", id: "password_confirmation" %>
  </div>
  <div class="form-group">
    <%= f.label :profile_image %>
    <% if @user.profile_image.attached? %>
      <div>
        <%= image_tag @user.profile_image.variant(resize:'150x150').processed %>
      </div>
    <% end %>
    <%= f.file_field :profile_image, class: "form-control", id: "file_field" %>
    <% if yield(:button_text) == "更新" %>
      <div class="delete_image">
        <span>プロフィール画像を削除する</span><%= f.check_box(:remove_profile_image, { checked: false }, true, false) %>
      </div>
    <% end %>
  </div>
  <%= f.submit yield(:button_text), class: "btn btn-success" %>
<% end %>
